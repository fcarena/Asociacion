<!DOCTYPE html>
<html>
<head>
  <title>CooperativaV1</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container" style="width: auto;">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<a class="brand" href="#">Cooperativa de Distribuidores</a>
				<div class="nav-collapse">
					<ul class="nav">
						<li class=<%= controller_name=='prestamos' ? 'active' : '' %>><%= link_to "#", mostrar_prestamos_path %></li>
						<li class=<%= controller_name=='Inicio/Home' ? 'active' : '' %>><%= link_to "Inicio/Home", socios_path %></li>
						<li class=<%= controller_name=='aportes' ? 'active' : '' %>><%= link_to "#", aportes_path %></li>
						<!--
						<li class=<%= controller_name=='loan_details' ? 'active' : '' %>><%= link_to "Detalles Cuota", loan_details_path %></li>
						-->
					</ul>
					<ul class="nav pull-right">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>

					</a>
						<li class=<%= controller_name=='departaments' ? 'active' : '' %>><%= link_to "Deptos. Ande", departaments_path %></li>
						
    </div>
    
					</ul>
									
				</div><!-- /.nav-collapse -->
			</div>
		</div><!-- /navbar-inner -->
	</div>

					<div class="container" style="margin-top:75px">
					<% flash.each do |name, msg| %>
		      		<p class="label label-info"><%= content_tag :div, msg, :id => "flash_#{name}" %>
		    		<% end %>
					</p>
						<div class='text-right'>
							<% if current_user %>
				        			Ingresaste como <%= current_user.username %>.
				        			<%= link_to "Salir del Sistema", logout_path, :class=>'btn btn-link' %>
		    				<% else %>
				        			<%= link_to "Registrarse", signup_path, :class=>'btn btn-danger' %>
					    			<%= link_to "Ingresar al Sistema", login_path, :class=>'btn' %>
	        				<% end %>
	</div>
		<%= yield %>

		</div>
	</div>
</body>
</html>
